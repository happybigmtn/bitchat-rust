<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive BitCraps data from cloud backup -->
        <exclude domain="file" path="bitcraps/" />
        <exclude domain="database" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow device transfer but exclude sensitive data -->
        <exclude domain="file" path="bitcraps/" />
        <exclude domain="database" />
    </device-transfer>
</data-extraction-rules>